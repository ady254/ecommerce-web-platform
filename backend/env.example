# Environment Configuration

# Node Environment (development, production, staging)
NODE_ENV=development

# Server Configuration
PORT=5000

# Razorpay API Credentials
# Get these from https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Test Mode
# Set to 'true' to use mock Shiprocket, 'false' for real integration
TEST_MODE=true

# Shiprocket Configuration (Required if TEST_MODE=false)
# Use the Email/Password of the API User you created in Shiprocket Settings -> API
SHIPROCKET_EMAIL=your_shiprocket_api_email
SHIPROCKET_PASSWORD=your_shiprocket_api_password
